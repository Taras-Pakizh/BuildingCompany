@using MVC_Practice.Models.Identity;
@model ApplicationUser
@{
    IQueryable<ApplicationUser> users = new List<ApplicationUser>() { Model }.AsQueryable();
}
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete this user</h2>

<table class="table">
    @UsersHelpers.UsersList(users, ViewBag.role, true)
</table>

<form method="post" action="/Users/Delete" class="form-horizontal">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>