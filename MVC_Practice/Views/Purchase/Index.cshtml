@using MVC_Practice.Models.DbModels
@model IEnumerable<DeliveryOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Purchase orders</h2>

<div class="container">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/Purchase/AddSupplier" name="AddForm">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add supplier</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <input class="form-control" type="text" name="supplierName" placeholder="Name" required>
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="tel" name="supplierPhoneNumber" placeholder="phone number" required>
                        </div>

                        <div class="form-group">
                            <input class="form-control" type="email" name="supplierEmail" placeholder="emain" required>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-primary form-control" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="btn-group btn-group-justified">
        <div class="btn-group">
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#AddCollapse">Add purchase</button>
        </div>
    </div>
    <br />
    <div class="container-fluid collapse" id="AddCollapse">
        <form method="post" action="/Purchase/Add" name="AddForm" class="form-inline">
            <div class="row">

                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">New supplier</button>

                <div class="checkbox">
                    @Html.DropDownList("supplierID", ViewBag.suppliers as SelectList, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input class="form-control" type="date" name="deliveryOrderDate" placeholder="Date" required>
                </div>

                <input  type="hidden" name="sumPrice" value="0" required/>

                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary form-control" />
                </div>

            </div>
        </form>
    </div>
</div>

<br />

<table class="table">
    @PurchaseHelpers.OrdersList(Model, ViewBag.isStoraged, false, false)
</table>