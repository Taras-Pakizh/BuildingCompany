@using MVC_Practice.Models.Identity;
@model ApplicationRole
@{ 
    IQueryable<ApplicationRole> roles = new List<ApplicationRole>() { Model }.AsQueryable();
}
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete this role?</h2>

<table class="table">
    @RolesHelpers.RolesList(roles, true)
</table>

<form method="post" action="/Roles/Delete" class="form-horizontal">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>